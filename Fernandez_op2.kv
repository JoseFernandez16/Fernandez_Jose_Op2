<ScreenExamen>:
    Screen: #PANTALLA PRINCIPAL, DE INICIO
        name: 'sc_prin'
        BoxLayout:               
            orientation: 'vertical'
            Label:
                id:titulo
                text:'BIENVENIDO AL MENÚ DE INICIO'
                font_size:40                
                bold: True  
                canvas.before:
                    Color:
                        rgb:25/255,25/255,112/255
                    Rectangle:
                        size:self.size
                        pos:self.pos
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Registrar Estudiante'
                    font_size: 40
                    on_release: root.current = 'sc_1' #root.Registar_Alumno() 
                Button:
                    text: 'Listado de Estudiantes'
                    font_size: 40
                    on_release: root.current = 'sc_2'
                Button:
                    text: 'Buscar Estudiante'
                    font_size: 40
                    on_release: root.current = 'sc_3'
                Button:
                    text: 'Modificar notas'
                    font_size: 40
                    on_release: root.current = 'sc_4'

